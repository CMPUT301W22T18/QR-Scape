<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/cardViewPalette"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/cUSERNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Username: "
            android:textColor="@color/textOnForeground"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/cUSERNAME"
            android:text="Name"
            android:textColor="@color/textOnForeground"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/cSCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cUSERNAME"
            android:text="Score: "
            android:textColor="@color/textOnForeground"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_text"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/cSCORE"
            android:text="Score"
            android:textColor="@color/textOnForeground"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/cHASH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cSCORE"
            android:text="Hash: "
            android:textColor="@color/textOnForeground"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_user"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/cHASH"
            android:text="Hash"
            android:textColor="@color/textOnForeground"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/cLONGITUDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_timestamp"
            android:text="Longitude: "
            android:textColor="@color/textOnForeground"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_DNE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_timestamp"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/cLONGITUDE"
            android:text="Longitude"
            android:textColor="@color/textOnForeground"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/cLATITUDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_DNE"
            android:text="Latitude: "
            android:textColor="@color/textOnForeground"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_DNE"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/cLATITUDE"
            android:text="Latitude"
            android:textColor="@color/textOnForeground"
            android:textSize="25dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>